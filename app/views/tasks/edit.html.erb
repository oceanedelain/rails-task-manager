<h1>Edit a new Task</h1>

<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
    <%= f.label :completed, "Done" %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>

<%= link_to "back to list", tasks_path %>
